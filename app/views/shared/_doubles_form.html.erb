<div class="container my-5">
  <%= simple_form_for double do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :price, :label => "Price per day" %>
    <%= f.input :category, collection: CATEGORIES %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn-special btnsub" %>
  <% end %>
</div>
