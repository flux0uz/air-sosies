  <div class="hero">
    <div class="text-header d-flex justify-content-center align-items-center">
      <%= image_tag "doppl_logo.png", alt: "doppel logo" %>
      <h1>The best place to rent doubles</h1>
    </div>
    <div class="down-arrow d-flex justify-content-center align-items-end">
      <a href="#categories"><%= icon('fas','chevron-down') %></a>
    </div>
  </div>


  <div class="searchbar">
    <%= form_tag doubles_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Type a celebrity's name"
      %>
      <%= select_tag "category",
        options_for_select([ '', 'Tv', 'Cinema', 'Comedy', 'Music', 'Politics', 'Sport', 'Animals', 'Others' ], ''),
        class: "form-control form-control-lg"
      %>
      <%= submit_tag "Search", class: "btn btn-primary mb-2" %>
    <% end %>
  </div>


