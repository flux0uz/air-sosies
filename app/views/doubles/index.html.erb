<div class="main-container m-5">
  <div class="grid-index m-3">
    <% @doubles.each do |double| %>
      <%= link_to double_path(double) do %>
        <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
          <img class="card-img-top" src="<%= double.image_URL %>" alt="Discover the double">
            <div class="card-body">
              <h5 class="card-title"><%= double.name %></h5>
              <h6 class="card-subtitle"><%= double.price %></h6>
              <p class="card-text"><%= double.address %></p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
