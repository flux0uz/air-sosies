<div class="main-container my-5">
  <div class="grid-index">
    <% @doubles.each do |double| %>
      <%= link_to double_path(double) do %>
        <div class="card shadow mb-5 bg-white" style="width: 18rem;">
          <%= cl_image_tag double.photo.key, class: 'card-img-top' %>
            <div class="card-body">
              <h5 class="card-title">                
                <div id="card-name-category">
                  <%= double.name %>
                  <% case %>
                    <% when double.category == "Music" %>
                      <i class="fas fa-music"></i>
                    <% when double.category == "Cinema" %>
                      <i class="fas fa-film"></i>
                    <% when double.category == "Politic" %>
                      <i class="fas fa-handshake"></i>
                    <% when double.category == "Comedy" %>
                      <i class="fas fa-theater-masks"></i>
                    <% when double.category == "Tv" %>
                      <i class="fas fa-tv"></i>
                    <% when double.category == "Sport" %>
                      <i class="fas fa-futbol"></i>
                  <% end %>
                </div>
              </h5>
              <h6 class="card-subtitle py-1"><i class="fas fa-tag"></i> <%= double.price.to_i %>â‚¬</h6>
              <p class="card-text py-1"><i class="fas fa-map-marker-alt"></i> <%= double.address %></p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="map-container">
    <div id="map" 
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
