  <div class="container my-5">
    <div class="doubles">
      <div class="text">
        <h1><%= @double.name %></h1>
        <h3>Daily price: <%= @double.price %>â‚¬</h3>
        <h5><%= @double.address %></h5>
        <p><%= @double.description %></p>
